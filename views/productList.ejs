</head>

<body>

    <% include head %>

        <div id="all">

            <div id="content">
                <div class="container">

                    <div class="col-md-12">

                        <ul class="breadcrumb">
                            <li><a href="index">Accueil</a>
                            </li>
                            <li>Affichage des produits</li>
                        </ul>

                    </div>

                    <style>
                        #listeP div img {
                            width: 25%
                        }
                        
                        #listeP div img:hover {
                            opacity: 0.7;
                            transform: scale(1.1);
                        }
                        
                        .spanTitle {
                            position: absolute;
                            font-size: 20px;
                        }
                        
                        .spanRef {
                            position: absolute;
                            margin-top: 5%;
                        }
                        
                        .spanPrice {
                            position: absolute;
                            margin-top: 9%;
                        }
                        
                        .spanCateg {
                            position: absolute;
                            margin-top: 13%;
                        }
                    </style>

                    <!--Liste des produits-->
                    <div class="col-md-6" style="width:80%; margin-left:10.5%;">
                        <div class="box">
                            <h2>Liste des produits</h2>
                            <hr>
                            <div id="listeP"></div>
                            <script>
                                $.ajax({
                                    'url': '/productAll',
                                    'type': 'POST',
                                    'data': {
                                        'id': 1
                                    },
                                    'success': manga => {
                                        try {
                                            $('#listeP').append('<div><a href="detail?id=' + manga._id + '"><img src="/img/covers/' + manga._images[0] + '"></a><span class="spanRef"><b>Reference: </b>' + manga._reference + '</span><span class="spanTitle"><b>' + manga._title + '</b> - Volume: ' + manga._volumeNumber + '</span><span class="spanPrice"><b>Prix: </b>' + manga._price + ' â‚¬</span><span class="spanCateg"><b>Genres: </b>' + manga._genres + '</span></div><hr>');

                                        } catch (e) {
                                            console.log(e);
                                        }
                                    }
                                });
                            </script>
                            <hr>

                        </div>
                    </div>

                </div>
                <!-- /.container -->
            </div>
            <!-- /#content -->

            <% include foot %>

        </div>
        <!-- /#all -->

